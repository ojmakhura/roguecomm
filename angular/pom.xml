<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <!-- <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>2.2.4.RELEASE</version>
        <relativePath /> lookup parent from repository
    </parent> -->
    <parent>
        <groupId>bw.co.roguesystems.comm</groupId>
        <artifactId>rogue-comm</artifactId>
        <version>0.0.1</version>
    </parent>

    <groupId>bw.co.roguesystems.comm</groupId>
    <artifactId>rogue-comm-angular</artifactId>
    <version>0.0.1</version>
    <packaging>jar</packaging>

    <name>Rogue Communication Module Angular Frontend</name>
    <description>Rogue Communication Module angular front end</description>
    <build>
        <plugins>
            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>${maven-antrun-plugin.version}</version>
                <executions>
                    <execution>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <target>
                        <copy todir="${project.basedir}/target/rogue-comm/src" overwrite="true" failonerror="false">
                            <fileset dir="${project.basedir}/target/src">
                                <include name="**/*"/>
                            </fileset>
                        </copy>
                        <copy todir="${project.basedir}/target/rogue-comm/src" overwrite="true" failonerror="false">
                            <fileset dir="${project.basedir}/src">
                                <include name="**/*"/>
                            </fileset>
                        </copy>
                        <copy todir="${project.basedir}/target/rogue-comm/public" overwrite="true" failonerror="false">
                            <fileset dir="${project.basedir}/public">
                                <include name="**/*"/>
                            </fileset>
                        </copy>
                        <copy todir="${project.basedir}/target/rogue-comm/.husky" overwrite="true" failonerror="false">
                            <fileset dir="${project.basedir}/.husky">
                                <include name="**/*"/>
                            </fileset>
                        </copy>
                        <copy todir="${project.basedir}/target/rogue-comm" overwrite="true" failonerror="false">
                            <fileset dir="${project.basedir}">
                                <include name=".browserslistrc"/>
                                <include name=".editorconfig"/>
                                <include name=".htmlhintrc"/>
                                <include name=".stylelintrc"/>
                                <include name="*.json"/>
                                <include name="*.js"/>
                                <include name="README.md"/>
                            </fileset>
                        </copy>
                    </target>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
